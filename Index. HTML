    <script>
        let currentContent = '';
        let selectedSubject = '';
        let filesProcessed = 0;
        let questionsGenerated = 0;
        let explanationsGiven = 0;

        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            // Load saved stats
            loadStats();
            
            // Add sample content for demo
            if (!currentContent) {
                currentContent = `ફોટોસિંથેસિસ એ એક જૈવિક પ્રક્રિયા છે જેમાં છોડ સૂર્યપ્રકાશ, કાર્બન ડાયોક્સાઇડ અને પાણીનો ઉપયોગ કરીને ખોરાક બનાવે છે.

મુખ્ય બાબતો:
• સૂર્યપ્રકાશ + CO2 + H2O → ગ્લુકોઝ + O2
• ક્લોરોફિલ આવશ્યક છે
• ઓક્સિજન ઉત્પન્ન થાય છે
• છોડનું મુખ્ય ખોરાક બનાવવાની પ્રક્રિયા`;
            }
        });

        // Tab switching
        function switchTab(tabName) {
            // Remove active from all tabs and contents
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            // Add active to selected tab
            event.target.classList.add('active');
            document.getElementById(tabName + 'Tab').classList.add('active');
        }

        // File handling
        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (file) {
                processFile(file);
            }
        }

        function handleFileDrop(event) {
            event.preventDefault();
            event.stopPropagation();
            
            const uploadArea = event.target.closest('.upload-area');
            uploadArea.classList.remove('dragover');
            
            const file = event.dataTransfer.files[0];
            if (file) {
                processFile(file);
            }
        }

        function handleDragOver(event) {
            event.preventDefault();
            event.stopPropagation();
            event.target.closest('.upload-area').classList.add('dragover');
        }

        function handleDragLeave(event) {
            event.preventDefault();
            event.stopPropagation();
            event.target.closest('.upload-area').classList.remove('dragover');
        }

        // Process uploaded file
        function processFile(file) {
            showLoading();
            
            if (file.type === 'application/pdf') {
                processPDF(file);
            } else if (file.type.startsWith('image/')) {
                processImage(file);
            } else {
                showToast('કેવળ PDF અને Image files સપોર્ટેડ છે!', 'error');
                hideLoading();
            }
        }

        // Process PDF using PDF.js
        function processPDF(file) {
            const fileReader = new FileReader();
            fileReader.onload = function() {
                const typedarray = new Uint8Array(this.result);
                
                pdfjsLib.getDocument(typedarray).promise.then(function(pdf) {
                    let textContent = '';
                    const numPages = pdf.numPages;
                    let pagesProcessed = 0;
                    
                    for (let i = 1; i <= numPages; i++) {
                        pdf.getPage(i).then(function(page) {
                            page.getTextContent().then(function(content) {
                                const pageText = content.items.map(item => item.str).join(' ');
                                textContent += pageText + '\n';
                                pagesProcessed++;
                                
                                updateProgress((pagesProcessed / numPages) * 100);
                                
                                if (pagesProcessed === numPages) {
                                    currentContent = textContent;
                                    filesProcessed++;
                                    updateStats();
                                    hideLoading();
                                    showToast('PDF સફળતાપૂર્વક લોડ થયું!');
                                }
                            });
                        });
                    }
                });
            };
            fileReader.readAsArrayBuffer(file);
        }

        // Process Image using Tesseract.js
        function processImage(file) {
            Tesseract.recognize(file, 'eng+guj', {
                logger: m => {
                    if (m.status === 'recognizing text') {
                        updateProgress(m.progress * 100);
                    }
                }
            }).then(({ data: { text } }) => {
                currentContent = text;
                filesProcessed++;
                updateStats();
                hideLoading();
                showToast('Image માંથી text extract થયું!');
            }).catch(error => {
                console.error('OCR Error:', error);
                hideLoading();
                showToast('Image process કરવામાં સમસ્યા!', 'error');
            });
        }

        // Subject selection
        function selectSubject(subject) {
            // Remove previous selection
            document.querySelectorAll('.subject-card').forEach(card => {
                card.classList.remove('selected');
            });
            
            // Add selection to clicked card
            event.target.closest('.subject-card').classList.add('selected');
            selectedSubject = subject;
            showToast(`${getSubjectName(subject)} પસંદ કર્યું!`);
        }

